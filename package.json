{
  "name": "mongo-express-middleware",
  "description": "Mongo CRUD middleware for express",
  "version": "0.1.0",
  "scripts": {
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "yarn lint --fix",
    "test:app": "NODE_ENV=test mocha --opts .mocharc",
    "test:docker": "docker-compose -f docker-compose.test.yml up -d",
    "test": "yarn test:docker && yarn test:app",
    "test:watch": "yarn test --watch"
  },
  "peerDependencies": {
    "mongoose": "^5.4.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "dotenv": "^6.2.0",
    "eslint": "^5.12.1",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "mocha": "^5.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint:fix",
      "yarn test",
      "git add"
    ]
  },
  "dependencies": {
    "mongoose": "^5.4.10"
  }
}
